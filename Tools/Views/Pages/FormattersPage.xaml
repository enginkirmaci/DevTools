<Page
    x:Class="Tools.Views.Pages.FormattersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tools.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Formatters Page"
    d:DataContext="{d:DesignInstance local:FormattersPage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24"
          DataContext="{Binding ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border
            Margin="0,0,12,0"
            Padding="16"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel Orientation="Vertical">
                <RadioButton
                    Margin="0,4"
                    Content="Base64 Encode"
                    GroupName="Operation"
                    IsChecked="{Binding IsBase64EncodeSelected}"/>
                <RadioButton
                    Margin="0,4"
                    Content="Base64 Decode"
                    GroupName="Operation"
                    IsChecked="{Binding IsBase64DecodeSelected}"/>
                <RadioButton
                    Margin="0,4"
                    Content="Snake Case"
                    GroupName="Operation"
                    IsChecked="{Binding IsSnakeCaseSelected}"/>
                <RadioButton
                    Margin="0,4"
                    Content="Pascal Case"
                    GroupName="Operation"
                    IsChecked="{Binding IsPascalCaseSelected}"/>

                <ui:Button
                    Margin="0,8,0,0"
                    Command="{Binding ConvertCommand}"
                    Content="Convert"
                    Icon="{ui:SymbolIcon ArrowSwap24}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border
                Margin="0,0,0,12"
                Padding="16"
                Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label VerticalAlignment="Center">Input Text</Label>
                    <ui:TextBox
                        Grid.Column="1"
                        Margin="8"
                        AcceptsReturn="True"
                        Text="{Binding InputText}"
                        TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Padding="16"
                Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <ItemsControl ItemsSource="{Binding History}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center"
                                           Text="{Binding}"/>
                                <ui:Button
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    Command="{Binding DataContext.CopyToClipboardCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Copy"
                                    Icon="{ui:SymbolIcon Clipboard24}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</Page>