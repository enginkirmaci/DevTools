<Page
    x:Class="Tools.Views.Pages.CodeExecutePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tools.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Immediate Window"
    d:DataContext="{d:DesignInstance local:CodeExecutePage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24" DataContext="{Binding ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox
            x:Name="ImmediateInputTextBox"
            Grid.Row="0"
            AcceptsReturn="True"
            Text="{Binding ImmediateInput}" />

        <Button
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding ExecuteCommand}"
            Content="Execute" />

        <TextBlock
            Grid.Row="1"
            Margin="10"
            VerticalAlignment="Center"
            Text="Output:" />

        <Border
            Grid.Row="2"
            Padding="16"
            Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <TextBlock
                Margin="10"
                Text="{Binding ImmediateOutput}"
                TextWrapping="Wrap" />
        </Border>
    </Grid>
</Page>