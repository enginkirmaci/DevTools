<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="Tools.Views.Pages.ClipboardPasswordPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Tools.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Background="Transparent"
	mc:Ignorable="d">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Orientation="Vertical" Spacing="24">
			<!--  Password Input Card  -->
			<Border
				Grid.Row="1"
				Padding="24"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<StackPanel Spacing="16">
					<TextBlock
						FontWeight="SemiBold"
						Style="{StaticResource SubtitleTextBlockStyle}"
						Text="Password Settings" />

					<PasswordBox
						x:Name="PasswordInput"
						Header="Enter Password"
						IsEnabled="{x:Bind ViewModel.HasStoredPassword, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
						Password="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						PlaceholderText="Type your password here..." />

					<TextBlock
						Opacity="0.6"
						Style="{StaticResource CaptionTextBlockStyle}"
						Text="Password will be encoded and stored securely in settings"
						TextWrapping="Wrap" />

					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button
							Command="{x:Bind ViewModel.SavePasswordCommand}"
							Content="Save Password"
							IsEnabled="{x:Bind ViewModel.HasStoredPassword, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
							Style="{StaticResource AccentButtonStyle}">
							<Button.KeyboardAccelerators>
								<KeyboardAccelerator Key="Enter" />
							</Button.KeyboardAccelerators>
						</Button>

						<Button
							Command="{x:Bind ViewModel.ClearPasswordCommand}"
							Content="Clear Stored Password"
							IsEnabled="{x:Bind ViewModel.HasStoredPassword, Mode=OneWay}" />
					</StackPanel>
				</StackPanel>
			</Border>

			<!--  Header Info Card  -->
			<Border
				Padding="24"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<Grid>
					<StackPanel VerticalAlignment="Center" Spacing="6">
						<TextBlock
							Style="{StaticResource BodyTextBlockStyle}"
							Text="Store a password and paste it anywhere using Ctrl+Shift+V"
							TextWrapping="Wrap" />
						<TextBlock
							Margin="0,8,0,0"
							FontWeight="SemiBold"
							Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
							Style="{StaticResource BodyTextBlockStyle}"
							Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
							TextWrapping="Wrap"
							Visibility="{x:Bind ViewModel.StatusMessage, Mode=OneWay, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />
					</StackPanel>
				</Grid>
			</Border>
		</StackPanel>
	</ScrollViewer>
</Page>
