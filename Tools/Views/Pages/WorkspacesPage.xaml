<Page
    x:Class="Tools.Views.Pages.WorkspacesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tools.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Workspaces Page"
    d:DataContext="{d:DesignInstance local:WorkspacesPage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24" DataContext="{Binding ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Grid with filter text box and refresh button  -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  TextBox with a margin to separate it from the button  -->
            <ui:TextBox
                Grid.Column="0"
                Margin="0,0,8,0"
                Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Refresh button  -->
            <ui:Button
                Grid.Column="1"
                Command="{Binding RefreshCommand}"
                Icon="{ui:SymbolIcon ArrowClockwise24}"
                ToolTip="Refresh workspaces" />
        </Grid>

        <TextBlock Grid.Row="1" FontSize="20">
            <TextBlock.Text>
                <MultiBinding StringFormat="Platforms ({0})">
                    <Binding Path="FilteredPlatforms.Count" />
                </MultiBinding>
            </TextBlock.Text>
            <TextBlock.Visibility>
                <Binding Converter="{StaticResource NullVisibilityConverter}" Path="FilteredPlatforms" />
            </TextBlock.Visibility>
        </TextBlock>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding FilteredPlatforms}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction
                        Margin="4"
                        Padding="0"
                        IsChevronVisible="False">
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                Margin="24,16"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0,0,0,4"
                                    FontSize="16"
                                    FontTypography="BodyStrong"
                                    Text="{Binding PlatformName}"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Tertiary"
                                    FontSize="10"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding FolderPath}"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Margin="4"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <ui:Button
                                    Margin="4"
                                    VerticalAlignment="Stretch"
                                    Command="{Binding DataContext.OpenWithVSCodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding FolderPath}"
                                    Icon="{ui:SymbolIcon Code24}"
                                    ToolTip="VS Code" />
                                <ui:Button
                                    Margin="4"
                                    VerticalAlignment="Stretch"
                                    Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding FolderPath}"
                                    Icon="{ui:SymbolIcon Folder24}"
                                    ToolTip="Explorer" />
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid VerticalAlignment="Top" Columns="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <TextBlock
            Grid.Row="3"
            Margin="0,24,0,0"
            FontSize="20">
            <TextBlock.Text>
                <MultiBinding StringFormat="Projects ({0})">
                    <Binding Path="FilteredWorkspaces.Count" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <ItemsControl Grid.Row="4" ItemsSource="{Binding FilteredWorkspaces}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction
                        Margin="4"
                        Padding="0"
                        IsChevronVisible="False">
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                Margin="24"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0,0,0,4"
                                    FontSize="16"
                                    FontTypography="BodyStrong"
                                    Text="{Binding SolutionName}"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Tertiary"
                                    FontSize="10"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding FolderPath}"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Margin="4"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button
                                        Margin="4"
                                        VerticalAlignment="Stretch"
                                        Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding SolutionPath}"
                                        Icon="{ui:SymbolIcon Open24}"
                                        ToolTip="Visual Studio" />
                                    <ui:Button
                                        Margin="4"
                                        VerticalAlignment="Stretch"
                                        Command="{Binding DataContext.OpenWithVSCodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding FolderPath}"
                                        Icon="{ui:SymbolIcon Code24}"
                                        ToolTip="VS Code" />
                                </StackPanel>
                                <ui:Button
                                    Margin="4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding FolderPath}"
                                    Icon="{ui:SymbolIcon Folder24}"
                                    ToolTip="Explorer" />
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid VerticalAlignment="Top" Columns="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Page>