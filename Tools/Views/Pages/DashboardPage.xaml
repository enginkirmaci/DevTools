<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="Tools.Views.Pages.DashboardPage"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Background="Transparent"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	mc:Ignorable="d">

	<Grid Padding="-32,-24">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--  Modern Header Banner with Gradient  -->
		<Border
			Grid.Row="0"
			Height="140"
			Margin="0,0,0,20">
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Offset="1" Color="Transparent" />
					<!--<GradientStop Offset="0.5" Color="#FF6B69D6" />-->
					<GradientStop Offset="0" Color="{StaticResource LayerOnMicaBaseAltFillColorSecondary}" />
				</LinearGradientBrush>
			</Border.Background>
			<Grid Margin="32,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel
					Grid.Column="0"
					VerticalAlignment="Center"
					Spacing="4">
					<TextBlock
						FontWeight="Normal"
						Foreground="White"
						Style="{StaticResource TitleTextBlockStyle}"
						Text="Development Tools" />
					<TextBlock
						Foreground="White"
						Opacity="0.7"
						Style="{StaticResource BodyTextBlockStyle}"
						Text="Quick access to your development utilities" />
				</StackPanel>
				<FontIcon
					Grid.Column="1"
					FontSize="72"
					Foreground="White"
					Glyph="&#xE8F1;"
					Opacity="0.4" />
			</Grid>
		</Border>

		<!--  Dashboard Cards with improved styling  -->
		<GridView
			Grid.Row="1"
			Padding="18"
			ItemsSource="{x:Bind ViewModel.DashboardCards}"
			SelectionMode="None">
			<GridView.ItemTemplate>
				<DataTemplate>
					<Button
						Width="414"
						Height="100"
						Margin="6"
						Padding="0"
						HorizontalContentAlignment="Stretch"
						Command="{Binding Command}"
						CommandParameter="{Binding PageKey}"
						CornerRadius="6">
						<Grid Padding="20">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>

							<FontIcon
								Width="48"
								Height="48"
								Margin="0,0,16,0"
								FontSize="28"
								Foreground="White"
								Glyph="{Binding Symbol}" />

							<StackPanel Grid.Column="1" VerticalAlignment="Center">
								<TextBlock
									FontWeight="SemiBold"
									Text="{Binding Title}"
									TextWrapping="Wrap" />

								<TextBlock 
									Opacity="0.7"
									Style="{StaticResource CaptionTextBlockStyle}"
									Text="{Binding Subtitle}"
									TextWrapping="Wrap"
									Visibility="{Binding Subtitle, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />
							</StackPanel>
						</Grid>
					</Button>
				</DataTemplate>
			</GridView.ItemTemplate>
		</GridView>
	</Grid>
</Page>