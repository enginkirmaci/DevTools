<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Tools.Views.Pages.DashboardPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    Background="Transparent">

	<Grid Padding="0,32,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- Header Banner -->
		<Border
            Grid.Row="0"
            Height="116"
            CornerRadius="8"
            Margin="0,0,0,24">
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Offset="0" Color="#1F000000" />
					<GradientStop Offset="1" Color="#4F000000" />
				</LinearGradientBrush>
			</Border.Background>
			<StackPanel
                Margin="48,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
				<TextBlock
                    Style="{StaticResource TitleTextBlockStyle}"
                    Foreground="White"
                    Text="Development Tools" />
			</StackPanel>
		</Border>

		<!-- Dashboard Cards -->
		<GridView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.DashboardCards}"
            SelectionMode="None"
            IsItemClickEnabled="True">
			<GridView.ItemTemplate>
				<DataTemplate>
					<Button
                        Width="280"
                        Height="100"
                        Margin="4"
                        Padding="0"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding Command}"
                        CommandParameter="{Binding PageKey}">
						<Grid Padding="16">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<FontIcon
                                Grid.RowSpan="2"
                                FontSize="32"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"
                                Glyph="{Binding Symbol}" />

							<TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="{Binding Title}"
                                TextWrapping="Wrap" />

							<TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Opacity="0.7"
                                Text="{Binding Subtitle}"
                                TextWrapping="Wrap" />
						</Grid>
					</Button>
				</DataTemplate>
			</GridView.ItemTemplate>
		</GridView>
	</Grid>
</Page>