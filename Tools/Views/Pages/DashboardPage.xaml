<Page
    x:Class="Tools.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Tools.Views.Pages"
    Title="Dashboard Page"
    Margin="0,32,0,0"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Height="116"
            CornerRadius="8">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0" Color="#0F000000" />
                    <GradientStop Offset="1" Color="#4F000000" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel
                    Margin="48,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <ui:TextBlock
                        FontTypography="Title"
                        Foreground="#FFFFFF"
                        Text="Development Tools" />
                    <!--<ui:TextBlock
                            FontTypography="Subtitle"
                            Foreground="#B7FFFFFF"
                            Text="Windows Presentation Foundation" />
                        <ui:TextBlock
                            FontTypography="BodyStrong"
                            Foreground="#B7FFFFFF"
                            Text="Build Fluent experiences on Windows using WPF UI." />-->
                </StackPanel>
            </Grid>
        </Border>

        <ItemsControl
            Grid.Row="1"
            Margin="-4,24,-4,0"
            ItemsSource="{Binding ViewModel.DashboardCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid VerticalAlignment="Top" Columns="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction
                        Margin="4,4,4,4"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        Command="{Binding Command}"
                        CommandParameter="{Binding CommandParameter}"
                        IsChevronVisible="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <ui:SymbolIcon
                                Grid.RowSpan="2"
                                Margin="24,0,0,0"
                                FontSize="48"
                                Symbol="{Binding Symbol}" />
                            <ui:TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="24,24,0,0"
                                FontTypography="BodyStrong"
                                Text="{Binding Title}"
                                TextWrapping="WrapWithOverflow" />
                            <ui:TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="24,0,0,24"
                                Appearance="Secondary"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding Subtitle}"
                                TextWrapping="WrapWithOverflow" />
                        </Grid>
                    </ui:CardAction>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>