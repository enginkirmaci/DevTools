<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="Tools.Views.Pages.EFToolsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Tools.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Background="Transparent"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--  Modern Header Card  -->
		<Border
			Margin="0,0,0,12"
			Padding="12"
			Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
			BorderBrush="Transparent"
			BorderThickness="0"
			CornerRadius="8">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<TextBlock
					Grid.Column="1"
					VerticalAlignment="Center"
					Text="Convert SQL CREATE TABLE statements to C# entity classes and repository implementations" />

				<Button
					Grid.Column="2"
					Height="36"
					Command="{x:Bind ViewModel.ConvertSqlCommand}"
					Style="{StaticResource AccentButtonStyle}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<FontIcon FontSize="16" Glyph="&#xE8AB;" />
						<TextBlock Text="Convert to C#" />
					</StackPanel>
				</Button>
			</Grid>
		</Border>

		<!--  Entity Conversion Section  -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="16" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<!--  SQL Input Card  -->
			<Border
				Margin="0,0,0,12"
				Padding="12"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Height="40" Margin="0,0,0,6">
						<TextBlock
							VerticalAlignment="Center"
							Style="{StaticResource BodyStrongTextBlockStyle}"
							Text="SQL Input" />
					</Grid>

					<TextBox
						x:Name="SqlInputTextBox"
						Grid.Row="1"
						MinHeight="200"
						AcceptsReturn="True"
						Background="Transparent"
						BorderThickness="0"
						FontFamily="Consolas"
						PlaceholderText="Enter SQL CREATE TABLE statement..."
						Text="{x:Bind ViewModel.SqlInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						TextWrapping="Wrap" />
				</Grid>
			</Border>

			<!--  C# Output Card  -->
			<Border
				Grid.Column="2"
				Margin="0,0,0,12"
				Padding="12"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Height="40" Margin="0,0,0,6">
						<TextBlock
							VerticalAlignment="Center"
							Style="{StaticResource BodyStrongTextBlockStyle}"
							Text="C# Entity Class" />
						<Button
							Width="40"
							Height="40"
							HorizontalAlignment="Right"
							Command="{x:Bind ViewModel.CopyToClipboardCommand}"
							ToolTipService.ToolTip="Copy to clipboard">
							<FontIcon FontSize="16" Glyph="&#xE8C8;" />
						</Button>
					</Grid>

					<ScrollViewer Grid.Row="1">
						<TextBlock
							FontFamily="Consolas"
							FontSize="12"
							Text="{x:Bind ViewModel.CSharpOutput, Mode=OneWay}"
							TextWrapping="Wrap" />
					</ScrollViewer>
				</Grid>
			</Border>
		</Grid>

		<!--  Repository Template Section  -->
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="16" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<!--  Template Input Card  -->
			<Border
				Margin="0,0,0,12"
				Padding="12"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Height="40" Margin="0,0,0,6">
						<TextBlock
							VerticalAlignment="Center"
							Style="{StaticResource BodyStrongTextBlockStyle}"
							Text="Repository Template" />
					</Grid>

					<TextBox
						x:Name="TableNameInputTextBox"
						Grid.Row="1"
						MinHeight="200"
						AcceptsReturn="True"
						Background="Transparent"
						BorderThickness="0"
						FontFamily="Consolas"
						Text="{x:Bind ViewModel.RepositoryTemplate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						TextWrapping="Wrap" />
				</Grid>
			</Border>

			<!--  Repository Output Card  -->
			<Border
				Grid.Column="2"
				Margin="0,0,0,12"
				Padding="12"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="Transparent"
				BorderThickness="0"
				CornerRadius="8">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Height="40" Margin="0,0,0,6">
						<TextBlock
							VerticalAlignment="Center"
							Style="{StaticResource BodyStrongTextBlockStyle}"
							Text="Generated Repository" />
						<Button
							Width="40"
							Height="40"
							HorizontalAlignment="Right"
							Command="{x:Bind ViewModel.CopyRepositoryToClipboardCommand}"
							ToolTipService.ToolTip="Copy to clipboard">
							<FontIcon FontSize="16" Glyph="&#xE8C8;" />
						</Button>
					</Grid>

					<ScrollViewer Grid.Row="1">
						<TextBlock
							FontFamily="Consolas"
							FontSize="12"
							Text="{x:Bind ViewModel.RepositoryOutput, Mode=OneWay}"
							TextWrapping="Wrap" />
					</ScrollViewer>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Page>