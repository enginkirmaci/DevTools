<Page
    x:Class="Tools.Views.Pages.EFToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tools.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="EF Tools"
    d:DataContext="{d:DesignInstance local:EFToolsPage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="650"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24" DataContext="{Binding ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:InfoBar
            Title="SQL to C# Converter"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,12"
            IsClosable="False"
            IsOpen="True">
            <ui:Button
                Margin="10"
                Command="{Binding ConvertSqlCommand}"
                Content="Convert to C#"
                Icon="{ui:SymbolIcon ArrowSwap24}" />
        </ui:InfoBar>

        <TextBox
            x:Name="SqlInputTextBox"
            Grid.Row="1"
            Grid.Column="0"
            Height="200"
            Margin="10"
            AcceptsReturn="True"
            Text="{Binding SqlInput}" />

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">
            <TextBlock Text="{Binding CSharpOutput}" TextWrapping="Wrap" />
            <ui:Button
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding CopyToClipboardCommand}"
                Content="Copy"
                Icon="{ui:SymbolIcon Copy24}" />
        </Grid>
    </Grid>
</Page>