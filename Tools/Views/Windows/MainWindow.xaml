<?xml version="1.0" encoding="utf-8" ?>
<Window
	x:Class="Tools.Views.Windows.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Dev Tools"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TitleBar
			x:Name="AppTitleBar"
			Title="DevTools"
			BackRequested="TitleBar_BackRequested"
			IsBackButtonVisible="True">
			<TitleBar.IconSource>
				<ImageIconSource ImageSource="ms-appx:///Assets/logo.ico" />
			</TitleBar.IconSource>
		</TitleBar>

		<NavigationView
			x:Name="NavigationView"
			Grid.Row="1"
			BackRequested="NavigationView_BackRequested"
			Background="Transparent"
			IsBackButtonVisible="Collapsed"
			IsPaneOpen="True"
			IsPaneToggleButtonVisible="True"
			IsSettingsVisible="False"
			OpenPaneLength="300"
			PaneDisplayMode="Left"
			SelectionChanged="NavigationView_SelectionChanged">
			<NavigationView.HeaderTemplate>
				<DataTemplate>
					<Grid>
						<Border
							Height="134"
							Margin="-54,-42,0,-58"
							VerticalAlignment="Top"
							BorderBrush="Transparent"
							BorderThickness="0">
							<Border.Background>
								<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
									<GradientStop Offset="0" Color="{StaticResource LayerOnMicaBaseAltFillColorSecondary}" />
									<GradientStop Offset="0.5" Color="{StaticResource LayerOnMicaBaseAltFillColorSecondary}" />
									<GradientStop Offset="1" Color="Transparent" />
								</LinearGradientBrush>
							</Border.Background>
						</Border>
						<TextBlock
							Margin="-18,-18,0,0"
							Style="{StaticResource BodyLargeStrongTextBlockStyle}"
							Text="{Binding}" />
					</Grid>
				</DataTemplate>
			</NavigationView.HeaderTemplate>
			<!--  Menu items are populated from code-behind to keep tags consistent with page types  -->
			<NavigationView.MenuItems />

			<Frame
				x:Name="ContentFrame"
				Margin="0,-24,0,0"
				Padding="32,12,32,24">
				<!--<Frame.Background>
					<ImageBrush
						ImageSource="ms-appx:///Assets/bg.svg"
						Opacity="0.02"
						Stretch="UniformToFill" />
				</Frame.Background>-->
				<Frame.ContentTransitions>
					<TransitionCollection>
						<NavigationThemeTransition />
					</TransitionCollection>
				</Frame.ContentTransitions>
			</Frame>
		</NavigationView>

		<!--  Modern InfoBar with animation  -->
		<InfoBar
			x:Name="AppInfoBar"
			Grid.Row="1"
			MaxWidth="400"
			Margin="0,0,32,32"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			CornerRadius="8"
			IsOpen="False" />
	</Grid>
</Window>